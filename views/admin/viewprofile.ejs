									  <tr>
										<td><%=user[0].email%></td>
										<td><%=user[0].phone%></td>
										<td><%=user[0].gender%></td>
										<td><%=user[0].birthdate%></td>
									  </tr>
									</tbody>
									<thead>
										<tr>
										  <th scope="col">User ID</th>
										  <th scope="col">ID CARD NO</th>
										  <th scope="col">ID CARD PHOTO</th>
										  <th scope="col">Join Date</th>
										</tr>
									  </thead>
									  <tbody>
									  <tr>
										<td><%=user[0].id%></td>
										<td><%=user[0].nid_no%></td>
										<td class="w-25">
											<img src="/uploads/nid_pic/test.jpg" class="img-fluid img-thumbnail" style="max-height: 150px; max-width: 300px; " alt="<%user[0].username%>">
										</td>
										<td><%=user[0].joindate%></td>
									  </tr>
									</tbody>
								  </table>   
							  </div>
							</div>
						  </div>
						  <!-- End -->
					</div>
