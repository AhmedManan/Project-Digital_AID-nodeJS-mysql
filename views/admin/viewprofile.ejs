							<a href="/admin/users">
								<p>All Users</p>
							</a>
						</li>
						<li class="nav-item">
							<a href="tables.html">
								<p>Inventory</p>
							</a>
						</li>
						<li class="nav-item">
							<a href="tables.html">
								<p>Announcement</p>
							</a>
						</li>
						<li class="nav-item">
							<a href="notifications.html">
								<i class="la la-bell"></i>
								<p>Notifications</p>
								<!-- <span class="badge badge-success">3</span> -->
							</a>
						</li>
						<li class="nav-item">
							<a href="typography.html">
								<i class="la la-comment"></i>
								<p>Reports</p>
								<span class="badge badge-danger">25</span>
							</a>
						</li>
						<li class="nav-item">
							<a href="typography.html">
								<i class="la la-envelope"></i>
								<p>Message</p>
								<span class="badge badge-danger">25</span>
							</a>
						</li>
						<li class="nav-item">
							<a href="icons.html">
								<p>Logout</p>
							</a>
						</li>
					</ul>
				</div>
			</div>
			<div class="main-panel">
				<div class="content">
					<div class="container-fluid">
						<h4 class="page-title text-muted"> <%=user[0].first_name%>'s Profile </h4>
						<!-- Information -->
						<div class="container">
							<div class="row">
							  <div class="col-12">
								  <table class="table table-image table-responsive">
									<thead>
									  <tr>
										<th scope="col"><%=user[0].first_name%>'s Photo</th>
										<th scope="col">Full Name</th>
										<th scope="col">Username</th>
										<th scope="col">Usertype</th>
									  </tr>
									</thead>
									<tbody>
									  <tr>
										<td class="w-25">
											<img src="/uploads/profile_pic/Ahmed.jpg" class="img-fluid img-thumbnail" style="max-height: 200px; max-width: 200px; " alt="<%user[0].username%>">
										</td>
										<td><%=user[0].first_name%> <%=user[0].last_name%></td>
										<td><%=user[0].username%></td>
										<td><%=user[0].usertype%></td>
									  </tr>
									</tbody>
									<thead>
										<tr>
										  <th scope="col">Email</th>
										  <th scope="col">Phone no</th>
										  <th scope="col">Gender</th>
										  <th scope="col">BIRTHDATE</th>
